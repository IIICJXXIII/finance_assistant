/* 注册页面样式 */

.register-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #001529 0%, #f5f7fa 30%);
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #001529;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}

.placeholder {
  width: 64rpx;
}

/* 表单区域 */
.form-section {
  padding: 24rpx 32rpx;
}

.form-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 12rpx;
}

.form-subtitle {
  font-size: 26rpx;
  color: #909399;
}

/* 表单项 */
.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 12rpx;
}

/* 输入框 */
.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 88rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #303133;
}

.input-placeholder {
  color: #c0c4cc;
}

.eye-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.5;
}

/* 注册按钮 */
.register-btn {
  margin-top: 40rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  border-radius: 16rpx;
}

/* 链接区域 */
.link-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.link-text {
  font-size: 28rpx;
  color: #909399;
}

.link-primary {
  font-size: 28rpx;
  color: #409EFF;
  margin-left: 8rpx;
}
