.recycle-container {
  padding: 24rpx;
  min-height: 100vh;
  background-color: var(--bg-color);
}

.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
}

.clear-btn {
  font-size: 28rpx;
  color: var(--danger-color);
}

.list-item {
  margin-bottom: 20rpx;
  padding: 24rpx !important;
}

.item-main {
  margin-bottom: 16rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: 600;
  max-width: 400rpx;
}

.amount {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--danger-color);
}

.item-info {
  display: flex;
  align-items: center;
}

.item-date {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
}

.item-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-light);
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  padding: 0;
  margin: 0;
}

.action-btn.restore {
  background-color: #e6f7ff;
  color: var(--primary-color);
}

.action-btn.delete {
  background-color: #fff1f0;
  color: var(--danger-color);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}
