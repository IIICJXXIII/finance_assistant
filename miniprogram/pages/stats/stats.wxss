/* 数据报表页面样式 */

.stats-container {
  padding: 24rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx !important;
}

.stat-content {
  flex: 1;
}

.stat-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-right: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.category-value {
  font-size: 40rpx;
}

.stat-footer {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-success {
  background: linear-gradient(135deg, rgba(103, 194, 58, 0.2), rgba(103, 194, 58, 0.1));
}

.icon-warning {
  background: linear-gradient(135deg, rgba(230, 162, 60, 0.2), rgba(230, 162, 60, 0.1));
}

.icon-primary {
  background: linear-gradient(135deg, rgba(64, 158, 255, 0.2), rgba(64, 158, 255, 0.1));
}

.icon-text {
  font-size: 48rpx;
}

/* 图表区域 */
.charts-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.chart-card {
  padding: 24rpx !important;
}

.chart-content {
  min-height: 300rpx;
}

/* 分类列表 */
.category-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.category-item {
  display: flex;
  align-items: center;
}

.category-info {
  display: flex;
  align-items: center;
  width: 180rpx;
}

.category-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.category-name {
  font-size: 26rpx;
  color: var(--text-primary);
}

.category-bar-wrapper {
  flex: 1;
  height: 16rpx;
  background-color: #f0f2f5;
  border-radius: 8rpx;
  margin: 0 16rpx;
  overflow: hidden;
}

.category-bar {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.category-percent {
  font-size: 24rpx;
  color: var(--text-secondary);
  width: 60rpx;
  text-align: right;
}

/* 趋势图表 */
.trend-chart {
  padding: 20rpx 0;
}

.trend-bars {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 240rpx;
  padding: 0 10rpx;
}

.trend-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.trend-bar {
  width: 36rpx;
  background: linear-gradient(180deg, #409EFF, #66b1ff);
  border-radius: 8rpx 8rpx 0 0;
  transition: height 0.3s ease;
}

.trend-bar.prediction {
  background: linear-gradient(180deg, #E6A23C, #ebb563);
  opacity: 0.7;
}

.trend-month {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 12rpx;
}

.trend-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
}

.legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-dot.actual {
  background-color: #409EFF;
}

.legend-dot.prediction {
  background-color: #E6A23C;
}

.legend-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 快捷入口 */
.quick-entry {
  padding: 24rpx !important;
}

.entry-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.entry-item:active {
  opacity: 0.7;
}

.entry-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.entry-text {
  font-size: 24rpx;
  color: var(--text-regular);
}

/* 空状态 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}
