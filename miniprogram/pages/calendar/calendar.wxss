.calendar-container {
  padding: 24rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.month-nav {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.nav-btn {
  font-size: 48rpx;
  color: var(--primary-color);
  padding: 0 40rpx;
}

.month-text {
  font-size: 34rpx;
  font-weight: 600;
}

.calendar-grid {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.weekday-row {
  display: flex;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: var(--text-secondary);
  padding: 16rpx 0;
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
}

.day-cell {
  width: calc(100% / 7);
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.day-num {
  font-size: 28rpx;
  color: var(--text-primary);
}

.day-cell.other-month .day-num {
  color: var(--text-placeholder);
}

.day-cell.today {
  background-color: var(--primary-color);
  border-radius: 50%;
}

.day-cell.today .day-num {
  color: #ffffff;
}

.day-cell.has-data .day-dot {
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: var(--danger-color);
  border-radius: 50%;
}

.detail-card {
  margin-top: 24rpx;
}

.total-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--danger-color);
}

.expense-list {
  margin-top: 16rpx;
}

.expense-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.expense-item:last-child {
  border-bottom: none;
}

.expense-left {
  display: flex;
  align-items: center;
}

.expense-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.expense-name {
  font-size: 28rpx;
  color: var(--text-primary);
  max-width: 300rpx;
}

.expense-category {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.expense-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--danger-color);
}

.empty-state {
  padding: 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}
