<!--
  登录页面
  对应原 Vue 项目的 Login.vue
-->
<view class="login-container">
  <!-- 顶部品牌区域 -->
  <view class="brand-section">
    <view class="logo-wrapper">
      <image class="logo-icon" src="/assets/icons/logo.png" mode="aspectFit" />
    </view>
    <text class="app-name">SmartDoc</text>
    <text class="slogan">智能票据归档 · 高效财务管理</text>
  </view>

  <!-- 登录表单区域 -->
  <view class="form-section">
    <view class="form-card">
      <text class="form-title">欢迎登录</text>

      <!-- 用户名输入 -->
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icons/user.png" mode="aspectFit" />
        <input 
          class="input"
          type="text"
          placeholder="请输入账号"
          placeholder-class="input-placeholder"
          value="{{username}}"
          bindinput="onUsernameInput"
          focus="{{focusUsername}}"
        />
      </view>

      <!-- 密码输入 -->
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icons/lock.png" mode="aspectFit" />
        <input 
          class="input"
          type="text"
          password="{{!showPassword}}"
          placeholder="请输入密码"
          placeholder-class="input-placeholder"
          value="{{password}}"
          bindinput="onPasswordInput"
          bindconfirm="handleLogin"
        />
        <image 
          class="eye-icon" 
          src="/assets/icons/{{showPassword ? 'eye-open' : 'eye-close'}}.png" 
          mode="aspectFit"
          bindtap="togglePassword"
        />
      </view>

      <!-- 登录按钮 -->
      <button 
        class="btn btn-primary login-btn" 
        bindtap="handleLogin"
        loading="{{loading}}"
        disabled="{{loading}}"
      >
        立即登录
      </button>

      <!-- 注册链接 -->
      <view class="link-area">
        <text class="link-text">还没有账号？</text>
        <text class="link-primary" bindtap="goToRegister">立即注册</text>
      </view>
    </view>
  </view>

  <!-- 底部版权信息 -->
  <view class="footer">
    <text class="copyright">© 2024 SmartDoc 智能财务助手</text>
  </view>
</view>
