/* 登录页面样式 */

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #001529 0%, #003a70 50%, #f5f7fa 100%);
}

/* 品牌区域 */
.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
  padding-bottom: 60rpx;
}

.logo-wrapper {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.logo-icon {
  width: 80rpx;
  height: 80rpx;
}

.app-name {
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

.slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域 */
.form-section {
  flex: 1;
  padding: 0 40rpx;
}

.form-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 36rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #303133;
  text-align: center;
  margin-bottom: 48rpx;
}

/* 输入框 */
.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 16rpx;
  padding: 0 28rpx;
  height: 96rpx;
  margin-bottom: 28rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #303133;
}

.input-placeholder {
  color: #c0c4cc;
}

.eye-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.5;
}

/* 登录按钮 */
.login-btn {
  margin-top: 20rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  border-radius: 16rpx;
}

/* 链接区域 */
.link-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.link-text {
  font-size: 28rpx;
  color: #909399;
}

.link-primary {
  font-size: 28rpx;
  color: #409EFF;
  margin-left: 8rpx;
}

/* 底部版权 */
.footer {
  padding: 40rpx;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #909399;
}
