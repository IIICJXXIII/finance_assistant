/* 归档记录列表页面样式 */

.list-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--bg-color);
}

/* 搜索区域 */
.search-section {
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 40rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 筛选滚动 */
.filter-scroll {
  display: flex;
  margin-top: 20rpx;
  white-space: nowrap;
}

.filter-item {
  display: inline-flex;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  background-color: #f5f7fa;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--text-regular);
}

.filter-item.active {
  background-color: #409EFF;
  color: #ffffff;
}

/* 列表区域 */
.list-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  overflow: hidden;
}

.toolbar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-right: 16rpx;
}

.list-scroll {
  flex: 1;
}

/* 列表项 */
.list-item {
  position: relative;
  margin-bottom: 20rpx;
  padding: 24rpx !important;
}

.item-main {
  width: 100%;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  max-width: 400rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--danger-color);
}

.item-info {
  margin-bottom: 16rpx;
}

.item-name {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-left {
  display: flex;
  align-items: center;
}

.footer-left .tag {
  margin-right: 16rpx;
}

.date {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 状态标签 */
.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.status-draft {
  background-color: rgba(144, 147, 153, 0.1);
  color: #909399;
}

.status-pending {
  background-color: rgba(230, 162, 60, 0.1);
  color: #E6A23C;
}

.status-approved {
  background-color: rgba(103, 194, 58, 0.1);
  color: #67C23A;
}

.status-rejected {
  background-color: rgba(245, 108, 108, 0.1);
  color: #F56C6C;
}

/* 异常标识 */
.anomaly-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-secondary);
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

/* 操作弹窗 */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.action-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 1000;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.action-sheet.show {
  transform: translateY(0);
}

.action-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.action-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--danger-color);
}

.action-list {
  padding: 10rpx 0;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  font-size: 30rpx;
  color: var(--text-primary);
}

.action-item:active {
  background-color: #f5f7fa;
}

.action-item.danger {
  color: var(--danger-color);
}

.action-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.action-cancel {
  text-align: center;
  padding: 28rpx;
  font-size: 30rpx;
  color: var(--text-secondary);
  border-top: 16rpx solid var(--bg-color);
}
