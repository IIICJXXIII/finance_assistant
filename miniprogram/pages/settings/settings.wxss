.settings-container {
  padding: 24rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.settings-card {
  margin-bottom: 24rpx;
  padding: 0 !important;
}

.settings-group {
  padding: 0;
}

.group-title {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  padding: 24rpx 28rpx 16rpx;
  background-color: var(--bg-color);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid var(--border-light);
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 30rpx;
  color: var(--text-primary);
}

.item-value {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.item-arrow {
  font-size: 36rpx;
  color: var(--text-secondary);
}

.item-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: var(--text-primary);
}

.save-btn {
  margin-top: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
}
