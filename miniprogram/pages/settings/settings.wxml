<!--
  系统设置页面
-->
<view class="settings-container">
  <view class="card settings-card">
    <view class="settings-group">
      <text class="group-title">基本设置</text>
      
      <view class="settings-item">
        <text class="item-label">服务器地址</text>
        <input 
          class="item-input"
          value="{{serverUrl}}"
          bindinput="onServerInput"
          placeholder="http://localhost:8080"
        />
      </view>
    </view>
  </view>

  <view class="card settings-card">
    <view class="settings-group">
      <text class="group-title">账户安全</text>
      
      <view class="settings-item" bindtap="changePassword">
        <text class="item-label">修改密码</text>
        <text class="item-arrow">›</text>
      </view>
    </view>
  </view>

  <view class="card settings-card">
    <view class="settings-group">
      <text class="group-title">数据管理</text>
      
      <view class="settings-item" bindtap="exportData">
        <text class="item-label">导出数据</text>
        <text class="item-arrow">›</text>
      </view>
      
      <view class="settings-item" bindtap="clearCache">
        <text class="item-label">清除缓存</text>
        <text class="item-value">{{cacheSize}}</text>
      </view>
    </view>
  </view>

  <view class="card settings-card">
    <view class="settings-group">
      <text class="group-title">关于</text>
      
      <view class="settings-item">
        <text class="item-label">版本号</text>
        <text class="item-value">v1.0.0</text>
      </view>
      
      <view class="settings-item" bindtap="checkUpdate">
        <text class="item-label">检查更新</text>
        <text class="item-arrow">›</text>
      </view>
    </view>
  </view>

  <button class="btn btn-default save-btn" bindtap="saveSettings">保存设置</button>
</view>
