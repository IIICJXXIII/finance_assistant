/* 预算中心页面样式 */

.budget-container {
  padding: 24rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

/* 概览卡片 */
.overview-card {
  margin-bottom: 24rpx;
}

.edit-btn, .add-btn {
  font-size: 28rpx;
  color: var(--primary-color);
}

.budget-info {
  margin-top: 20rpx;
}

.budget-main {
  text-align: center;
  padding: 20rpx 0 30rpx;
}

.budget-label {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.budget-value {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.progress-section {
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-light);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 26rpx;
  color: var(--text-regular);
}

.progress-percent {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--success-color);
}

.progress-percent.warning {
  color: var(--warning-color);
}

.progress-percent.danger {
  color: var(--danger-color);
}

.progress-bar {
  height: 16rpx;
  background-color: #f0f2f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar.small {
  height: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #67C23A, #85ce61);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-fill.warning {
  background: linear-gradient(90deg, #E6A23C, #ebb563);
}

.progress-fill.danger {
  background: linear-gradient(90deg, #F56C6C, #f78989);
}

.progress-remain {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

/* 分类列表 */
.category-list {
  margin-top: 16rpx;
}

.category-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.category-item:last-child {
  border-bottom: none;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.category-left {
  display: flex;
  align-items: center;
}

.category-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.category-name {
  font-size: 28rpx;
  color: var(--text-primary);
}

.category-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.category-progress {
  display: flex;
  align-items: center;
}

.category-progress .progress-bar {
  flex: 1;
  margin-right: 16rpx;
}

.category-percent {
  font-size: 24rpx;
  color: var(--text-secondary);
  width: 60rpx;
  text-align: right;
}

/* 历史列表 */
.history-list {
  margin-top: 16rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.history-item:last-child {
  border-bottom: none;
}

.history-month {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  width: 160rpx;
}

.history-info {
  flex: 1;
}

.history-budget, .history-used {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal.show {
  opacity: 1;
  visibility: visible;
  transform: translate(-50%, -50%) scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-secondary);
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 表单 */
.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  padding: 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}
