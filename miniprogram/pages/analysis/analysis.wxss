.analysis-container {
  padding: 24rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.intro-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx !important;
  text-align: center;
  margin-bottom: 24rpx;
}

.intro-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.intro-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.intro-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.analyze-btn {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
}

.result-card {
  margin-bottom: 24rpx;
}

.result-summary {
  display: flex;
  margin-top: 20rpx;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.cluster-list {
  margin-top: 16rpx;
}

.cluster-item {
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.cluster-item:last-child {
  margin-bottom: 0;
}

.cluster-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.cluster-badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  color: #ffffff;
  font-size: 24rpx;
}

.cluster-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.cluster-desc {
  font-size: 26rpx;
  color: var(--text-regular);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.cluster-stats {
  display: flex;
  gap: 40rpx;
}

.stat {
  display: flex;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-right: 8rpx;
}

.stat-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.suggestion-list {
  margin-top: 16rpx;
}

.suggestion-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  margin-right: 12rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-regular);
  line-height: 1.5;
}

/* AI 分析报告 */
.ai-report {
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.ai-report-text {
  font-size: 28rpx;
  color: var(--text-regular);
  line-height: 1.8;
  white-space: pre-wrap;
}
