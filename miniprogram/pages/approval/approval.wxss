.approval-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--bg-color);
}

.tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  position: relative;
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: var(--text-secondary);
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

.badge {
  position: absolute;
  top: 16rpx;
  right: 50%;
  transform: translateX(60rpx);
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 8rpx;
  background-color: var(--danger-color);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 18rpx;
  text-align: center;
}

.list-scroll {
  flex: 1;
  padding: 24rpx;
}

.list-item {
  margin-bottom: 20rpx;
  padding: 24rpx !important;
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: 600;
  max-width: 400rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--danger-color);
}

.item-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.info-date {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.item-meta {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.submitter {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 16rpx;
}

.item-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-light);
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding: 0;
  margin: 0;
}

.action-btn.approve {
  background: linear-gradient(135deg, #67C23A, #85ce61);
  color: #ffffff;
}

.action-btn.reject {
  background-color: #fff1f0;
  color: var(--danger-color);
}

.item-result {
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-light);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}
