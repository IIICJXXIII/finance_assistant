/**
 * SmartDoc 全局样式
 * 与原有 Vue 前端保持一致的设计风格
 */

/* ===== 全局变量 ===== */
page {
  --primary-color: #409EFF;
  --success-color: #67C23A;
  --warning-color: #E6A23C;
  --danger-color: #F56C6C;
  --info-color: #909399;
  
  --bg-color: #f5f7fa;
  --card-bg: #ffffff;
  --text-primary: #303133;
  --text-regular: #606266;
  --text-secondary: #909399;
  --text-placeholder: #c0c4cc;
  
  --border-color: #dcdfe6;
  --border-light: #e4e7ed;
  
  --sidebar-bg: #001529;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--bg-color);
  box-sizing: border-box;
}

/* ===== 通用布局 ===== */
.container {
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* ===== 卡片样式 ===== */
.card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* ===== 按钮样式 ===== */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #409EFF 0%, #66b1ff 100%);
  color: #ffffff;
}

.btn-success {
  background: linear-gradient(135deg, #67C23A 0%, #85ce61 100%);
  color: #ffffff;
}

.btn-warning {
  background: linear-gradient(135deg, #E6A23C 0%, #ebb563 100%);
  color: #ffffff;
}

.btn-danger {
  background: linear-gradient(135deg, #F56C6C 0%, #f78989 100%);
  color: #ffffff;
}

.btn-default {
  background-color: #ffffff;
  color: var(--text-regular);
  border: 1rpx solid var(--border-color);
}

.btn-text {
  background: transparent;
  color: var(--primary-color);
}

.btn:active {
  opacity: 0.8;
}

.btn[disabled] {
  opacity: 0.6;
}

/* ===== 输入框样式 ===== */
.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 88rpx;
  margin-bottom: 24rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: var(--text-primary);
}

.input-placeholder {
  color: var(--text-placeholder);
}

/* ===== 标签样式 ===== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag-primary {
  background-color: rgba(64, 158, 255, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background-color: rgba(103, 194, 58, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(230, 162, 60, 0.1);
  color: var(--warning-color);
}

.tag-danger {
  background-color: rgba(245, 108, 108, 0.1);
  color: var(--danger-color);
}

.tag-info {
  background-color: rgba(144, 147, 153, 0.1);
  color: var(--info-color);
}

/* ===== 列表样式 ===== */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-light);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f5f7fa;
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* ===== 加载状态 ===== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* ===== 分割线 ===== */
.divider {
  height: 1rpx;
  background-color: var(--border-light);
  margin: 24rpx 0;
}

/* ===== 文字省略 ===== */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* ===== 安全区域 ===== */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
